import BodyText from "~/components/BodyText.astro";
import CommonContent from "~/components/CommonContent.astro";
import Hero from "~/components/hero/Hero.astro";
import HeroContentsStandard from "~/components/hero/HeroContentsStandard.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import Bios from "~/components/Bios.astro";
import Arrow from "~/components/Arrow.astro";
import Button from "~/components/Button.astro";
import { links } from "~/data/links";
import Branding from "~/components/Branding.astro";

const biosSquiggleTools: BioProps[] = [
	{
		links: {
			bluesky: "https://bsky.app/profile/bostonts.club",
			linkedin: "https://www.linkedin.com/groups/13008308",
			mastodon: "https://mastodon.social/@BostonTS",
			website: "https://bostonts.club",
		},
		name: "Boston TS Club",
		photo: bostonTSClub,
	},
	{
