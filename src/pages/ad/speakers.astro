---
import { Image } from "astro:assets";
import Badge from "~/components/hero/Badge.astro";
import Logo from "~/components/Logo.astro";
import { mcs } from "~/data/mcs";
import { speakers } from "~/data/speakers";
import { currentYear } from "~/data/years";
import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout
	description="A Boston conference for excellent web dev tooling."
	title="Ad: Speakers"
>
	<div class="ad">
		<div class="top">
			<Logo invert year={currentYear} />
			<span class="speaker-announcements">
				Meet this year's amazing speakers
			</span>
		</div>

		<ul class="speakers">
			{
				speakers.map((speaker) => (
					<li class="speaker">
						<Image
							alt=""
							class="speaker-image"
							height={96}
							src={speaker.image}
							width={96}
						/>
						<div class="speaker-name">{speaker.name}</div>
					</li>
				))
			}
			{
				mcs.map((mc) => (
					<li class="speaker">
						<Image
							alt=""
							class="speaker-image"
							height={96}
							src={mc.image}
							width={96}
						/>
						<div class="speaker-name">{mc.name}</div>
						<Badge class="mc-badge">MC</Badge>
					</li>
				))
			}
		</ul>
	</div>
</BaseLayout>

<style>
	.ad {
		align-items: flex-start;
		background: linear-gradient(
			180deg,
			var(--colorBlueBright1) 0%,
			var(--colorBlueBright2) 100%
		);
		color: var(--colorAccentDark);
		display: flex;
		flex-direction: column;
		height: 100vh;
		justify-content: space-evenly;
		width: 100vw;
		padding: 0 5rem;
	}

	.top {
		--topFontSize: 3.5rem;
		align-items: baseline;
		color: var(--colorLogoText);
		display: flex;
		font-family: var(--fontFamilyLogo);
		font-size: var(--topFontSize);
		gap: 1rem;
		margin-bottom: -1rem;
		position: relative;
		width: 100%;
	}

	.logo {
		transform: scale(1.5) translateY(-0.25rem);
		margin-left: 5rem;
	}

	.speaker-announcements {
		font-size: 4rem;
		font-weight: var(--fontWeightBold);
		margin-left: 6rem;
	}

	.speakers {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		gap: 2.5rem 3.5rem;
		position: relative;
		width: 100%;
	}

	.speaker {
		align-items: center;
		display: flex;
		gap: 0.75rem;
		font-size: 2.25rem;
		font-family: var(--fontFamilyHeading);
		font-weight: var(--fontWeightBold);
		width: calc(25% - 5rem);
	}

	.speaker-image {
		border-radius: 100%;
	}

	.mc-badge {
		margin-bottom: 2rem;
		margin-right: -0.5rem;
		transform: scale(1.2);
	}
</style>
