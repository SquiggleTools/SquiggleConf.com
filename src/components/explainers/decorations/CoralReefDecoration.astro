---
import { Image } from "astro:assets";

import fishTropicalSmall from "~/assets/design/fish-tropical-small.svg";
import yellowScrunchy from "~/assets/design/yellow-scrunchy.svg";
import coralReefLarge from "~/assets/design/coral-reef-large.svg";
import coralReefSmall from "~/assets/design/coral-reef-small.svg";
import ContentArea from "~/components/ContentArea.astro";
---

<ContentArea class="coral-reef-decoration">
	<Image alt="" class="coral-reef-small" src={coralReefSmall} />
	<Image alt="" class="coral-reef-large" src={coralReefLarge} />
	<Image alt="" class="fish-tropical-small" src={fishTropicalSmall} />
	<Image alt="" class="yellow-scrunchy" src={yellowScrunchy} />
	<slot />
</ContentArea>

<style>
	.coral-reef-decoration {
		position: relative;
	}

	img {
		position: absolute;
	}

	.coral-reef-small {
		top: -7.5rem;
		width: 32rem;
		left: 2.5rem;
	}

	.coral-reef-large {
		top: 2.5rem;
		height: 42rem;
		left: 45%;
	}

	.fish-tropical-small {
		z-index: 1;
		width: 20rem;
		left: -2rem;
		top: -3.5rem;
	}

	.yellow-scrunchy {
		bottom: -2.5rem;
		height: 5rem;
		right: 13.5rem;
		z-index: 1;
	}
</style>
