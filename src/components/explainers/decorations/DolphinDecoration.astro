---
import dolphin from "~/assets/design/dolphin.svg";
import ContentArea from "~/components/ContentArea.astro";
import DecorativeImage from "~/components/DecorativeImage.astro";
---

<ContentArea class="dolphin-decoration">
	<DecorativeImage class="dolphin dolphin-left" src={dolphin} />
	<DecorativeImage class="dolphin dolphin-right" src={dolphin} />
	<slot />
</ContentArea>

<style>
	.dolphin-decoration {
		position: relative;
	}

	.dolphin {
		height: 12.5rem;
		width: 12.5rem;
		z-index: 1;
	}

	.dolphin-left {
		left: 6.5rem;
		top: -3.5rem;
	}

	.dolphin-right {
		bottom: -2.5rem;
		right: 3.5rem;
		transform: rotate(180deg);
	}
</style>
