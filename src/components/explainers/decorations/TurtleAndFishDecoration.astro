---
import turtle from "~/assets/design/turtle.svg";
import fishSchool from "~/assets/design/fish-school.svg";
import ContentArea from "~/components/ContentArea.astro";
import DecorativeImage from "~/components/DecorativeImage.astro";
---

<ContentArea class="turtle-and-fish-decoration">
	<DecorativeImage class="turtle" src={turtle} />
	<DecorativeImage class="fish-school" src={fishSchool} />
	<slot />
</ContentArea>

<style>
	.turtle-and-fish-decoration {
		position: relative;
	}

	.turtle {
		left: -28rem;
		bottom: -15rem;
		height: 22rem;
		z-index: 1;
	}

	.fish-school {
		top: -2.5rem;
		right: -5rem;
		height: 7.5rem;
		z-index: 1;
	}

	@media (width >= 819px) {
		.turtle {
			left: -22rem;
		}
	}
</style>
