---
import whales from "~/assets/design/whales.svg";
import ContentArea from "~/components/ContentArea.astro";
import DecorativeImage from "~/components/DecorativeImage.astro";
---

<ContentArea class="whales-decoration">
	<DecorativeImage class="whales" src={whales} />
	<slot />
</ContentArea>

<style>
	.whales-decoration {
		position: relative;
	}

	.whales {
		height: 50rem;
		left: -35%;
		top: -19rem;
	}

	@media (width >= 819px) {
		.whales {
			left: -50%;
		}
	}
</style>
