---
import Heading from "./Heading.astro";
import BodyText from "./BodyText.astro";
import ContentArea from "./ContentArea.astro";
import SessionsSummary from "./SessionsSummary.astro";
import Button from "./Button.astro";
import Arrow from "./Arrow.astro";
---

<ContentArea class="speakers">
	<div id="sessions"></div>
	<Heading id="sessions" level="h2">Sessions</Heading>

	<BodyText class="speakers-description">
		Hear from practitioners of excellent web dev tooling: the people who bring
		you the squigglies you know and love.
	</BodyText>

	<SessionsSummary class="speakers-sessions" />

	<Button
		as="a"
		class="sessions-button"
		size="large"
		variant="emphasized"
		href="/sessions"
	>
		See session details
		<Arrow />
	</Button>
</ContentArea>

<style>
	.speakers {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	h2 {
		font-family: var(--fontFamilyHeading);
		font-size: var(--fontSizeLarger);
		margin-top: 3.5rem;
		text-align: center;
	}

	.speakers-description {
		margin-bottom: 1.5rem;
		max-width: 33rem;
	}

	.sessions-button {
		gap: 0.5rem;
		margin: 1rem 0 3.5rem;
	}

	@media (width >= 1117px) {
		.sessions-button {
			margin-top: 0;
		}
	}
</style>
