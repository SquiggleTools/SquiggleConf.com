---
export type ContentAreaWidth = "thin" | "normal" | "wide";

export interface Props {
	as?: string;
	class?: string;
	width?: ContentAreaWidth;
}

const {
	as: As = "div",
	class: className,
	width = "normal",
	...rest
} = Astro.props;
---

<As class:list={["content-area", `content-area-${width}`, className]} {...rest}>
	<slot />
</As>

<style>
	.content-area {
		padding: 0 2rem;
		max-width: 90vw;
		margin: auto;
	}

	.content-area-thin {
		width: min(100vw, var(--sizeContentAreaThin));
	}

	.content-area-normal {
		width: min(100vw, var(--sizeContentAreaNormal));
	}

	.content-area-wide {
		width: min(100vw, var(--sizeContentAreaWide));
	}
</style>
