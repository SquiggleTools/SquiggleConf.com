---
import Bio, { Props as BioProps } from "~/components/Bio.astro";

interface Props {
	bios: BioProps[];
}
---

<ul class="bios">
	{Astro.props.bios.map((bio) => <Bio {...bio} />)}
</ul>

<style>
	.bios {
		display: flex;
		flex-wrap: wrap;
		font-family: var(--fontFamilyHeading);
		justify-content: center;
		margin-top: 2rem;
		row-gap: 2rem;
		text-align: center;
		width: 100%;
	}
</style>
