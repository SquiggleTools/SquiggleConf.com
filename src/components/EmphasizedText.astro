---
const { class: className, underline, ...rest } = Astro.props;
---

<em
	class:list={[
		className,
		"emphasized-text",
		underline && "emphasized-text-underline",
	]}
	{...rest}
>
	<slot />
</em>

<style>
	.emphasized-text {
		color: var(--colorAccentMedium);
	}

	.emphasized-text-underline {
		text-decoration: underline;
	}
</style>
