---
import ContentArea from "./ContentArea.astro";
import Heading from "./Heading.astro";

interface Props {
	heading: string;
}
---

<ContentArea class="common-content" width="thin">
	<Heading level="h2">{Astro.props.heading}</Heading>
	<slot />
</ContentArea>

<style>
	.common-content {
		display: flex;
		flex-direction: column;
		margin: 5rem auto 0;
	}

	.common-content:last-of-type {
		padding-bottom: 3.5rem;
	}

	h2 {
		color: var(--colorForegroundEmphasized);
		font-size: var(--fontSizeLarge);
		font-family: var(--fontFamilyLogo);
		padding-bottom: 2rem;
		text-align: center;
	}
</style>
