---
import { Image, LocalImageProps } from "astro:assets";

type Props = Omit<LocalImageProps, "alt">;

const { class: className, ...rest } = Astro.props as LocalImageProps;
---

<Image class:list={[className, "decorative-image"]} {...rest} alt="" />

<style>
	.decorative-image {
		pointer-events: none;
		position: absolute;
		user-select: none;
	}
</style>
