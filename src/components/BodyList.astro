---
const { as: As, class: className, ...rest } = Astro.props;
---

<As class:list={[className, "body-list"]} {...rest}>
	<slot />
</As>

<style>
	.body-list {
		font-size: var(--fontSizeSmall);
		font-weight: var(--fontWeightMedium);
		margin: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.body-list :global(ul) {
		padding-inline-start: 1rem;
		font-size: 90%;
	}
</style>
