---
import { Image } from "astro:assets";

import SquiggleWaveImage from "~/assets/2024/squiggle-wave.svg";

interface Props {
	left: number;
	scale: number;
	top: number;
}
---

<Image
	alt=""
	class="squiggle-wave"
	src={SquiggleWaveImage}
	style={{
		left: `${Astro.props.left}%`,
		top: `${Astro.props.top}%`,
		transform: `scale(${Astro.props.scale})`,
	}}
/>

<style>
	.squiggle-wave {
		filter: blur(3px);
		opacity: 0.7;
		position: absolute;
	}
</style>
