---
import "@fontsource-variable/urbanist";

import NextYearNotice from "~/components/2024/NextYearNotice.astro";
import { Props as HeadProps } from "~/components/Head.astro";
import Header from "~/components/Header.astro";
import BodyArea from "~/components/BodyArea.astro";
import Footer from "~/components/Footer.astro";
import ThemeToggle from "~/components/ThemeToggle.astro";

import BaseLayout from "../BaseLayout.astro";

type Props = Omit<HeadProps, "year">;
---

<BaseLayout {...Astro.props} year={2024}>
	<Header year={2024} />
	<NextYearNotice />
	<BodyArea class="page-layout-2024">
		<slot />
		<ThemeToggle />
	</BodyArea>
	<Footer year={2024} />
</BaseLayout>

<style>
	.page-layout-2024 {
		--fontFamilyBody: "Urbanist Variable", sans-serif;

		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1.5rem 0 3.5rem;
	}
</style>
